<!DOCTYPE HTML>
<html>
<head>
    <title>Clients</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="stylesheet" type="text/css" href="../static/css/style.css">
</head>
<body>

<style>
    body{
        font-family: 'Montserrat', sans-serif;
        color: darkslateblue;
        font-weight: 500;
    }

    .col4{
        height: auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border-radius: 20px;
        border: 2px solid chocolate;
        background-color: teal;
    }

    input[type="text"], input[type="number"]{
        height: 30px;
        width: 200px;
        font-size: 14px;
        border-radius: 10px;
        border: 1px solid skyblue;
        padding: 2px 10px;
        color: black;
    }

    .wrapper{
        width: 1200px;
        margin: auto;
        margin-top: 10%
    }

    h1{
        font-size: 25px;
        color: black;
    }

    input {
        outline: none;
        border: 1px solid black;
    }

    input:focus{
        border: 1px solid blue;
    }

    .listElem{
        display: flex;
        flex-direction: column
    }

    label{
        margin-bottom: 5px;
        margin-left: 5px;
    }

    .listElemLast button{
        height: 30px;
        width: 200px;
        font-size: 14px;
        border-radius: 10px;
        border: 1px solid white;
        color: white;
        background-color: darkslateblue;
    }

    a{
        line-height: 35px;
        font-weight: 500;
        color: black;
        text-decoration: none;
        font-size: 15px;
    }

    a:hover{
        color: cornflowerblue;
    }

    .linker a{
        padding: 15px;
    }

    .linker{
        margin-top: 20px;
        background-color: white;
        border-radius: 20px;
        margin-bottom: 20px;
    }

    table {
        font-family: "Lucida Sans Unicode", "Lucida Grande", Sans-Serif;
        font-size: 14px;
        border-collapse: collapse;
        text-align: center;
    }

    th {
        background: chocolate;
        color: white;
        padding: 10px 20px;
    }

    th, td {
        border-style: solid;
        border-width: 0 1px 1px 0;
        border-color: white;
    }

    td {
        background: #D8E6F3;
    }

    th:first-child, td:first-child {
        text-align: left;
    }

    .filterValue{
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 3px;
    }

    .filterValue label{
        margin-right: 20px;
        color: white

    }
    button{
        height: 30px;
        width: 400px;
        font-size: 14px;
        border-radius: 10px;
        color: black;
        background-color: white;
    }

    button:hover{
        color: cornflowerblue;
    }

    .buttonCont{
        margin-top: 10px;
        display: flex;
        justify-content: center;
    }

    .buttonCont1{
        margin-top: 5px;
        margin-bottom: 10px;
        display: flex;
        justify-content: center;
    }
</style>


<div class="wrapper">
    <div class="col4">

        <h1>Clients</h1>

        <form action="../client/filterClients" method="get">

            <div class="filterValue">
                <label for="idData">sorting by passport:</label>
                <input type="text" name="idData" value="{{idData}}">
            </div>

            <div class="filterValue">
                <label for="fullName">sort by full name:</label>
                <input type="text" name="fullName" value="{{fullName}}">
            </div>

            <div class="filterValue">
                <label for="phoneNumber">sorting by phone:</label>
                <input type="text" name="phoneNumber" value="{{phoneNumber}}">
            </div>

            <div class="buttonCont">
                <button type="submit">Ok</button>
            </div>
            <div class="buttonCont1">
                <button type="submit" formaction="../client/reset-filters">Reset</button>
            </div>
            <br>
            <br>
        </form>

        <div>
            <table>
                <tr>
                    <th>Client</th>
                    <th>Passport</th>
                    <th>Family status</th>
                    <th>Address</th>
                    <th>Telephone</th>
                    <th>Employment information</th>
                    <th>Amount of credit</th>
                </tr>
                {{#clients}}
                    <tr>
                        <td>{{fullName}}</td>
                        <td>{{idData}}</td>
                        <td>{{familyStatus}}</td>
                        <td>{{address}}</td>
                        <td>{{phoneNumber}}</td>
                        <td>{{workingExperience}}</td>
                        <td>{{loanAmount}}</td>
                    </tr>
                {{/clients}}
            </table>
        </div>

        <div class="linker">
            <a class="backToMain" href="/client/admin-part">Back</a>
        </div>
    </div>
</div>

</body>
</html>